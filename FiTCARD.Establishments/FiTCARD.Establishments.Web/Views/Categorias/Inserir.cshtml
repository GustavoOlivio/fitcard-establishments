<div class="row">
    <div class="col-lg-3 col-md-3"></div>
    <div class="col-lg-5 col-md-5">
        <div class="col" align="center">
            <h1>Incluir Categorias</h1>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-md-12 col-lg-12">
                        <label for="nome">Nome:*</label>
                        <input type="text" class="form-control" id="nome">
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" id="ativo" class="form-check-input" checked />
                        <label for="ativo">Ativo</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" id="telefoneObrigatorio" class="form-check-input" />
                        <label for="telefoneObrigatorio">TelefoneObrigatorio</label>
                    </div>
                </div>
                <button class="btn btn-success btn-sm" type="submit" onclick="insertCategoria()">Inserir</button>
                @Html.ActionLink("Cancelar", "Index", "Categorias", null, new { @class = "btn btn-warning btn-sm" })
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3"></div>
</div>
<script src="~/js/categorias.js"></script>
